{
    "name": "kineticode",
    "displayName": "Kineticode: Air Gesture Control",
    "description": "Control VS Code with hand gestures and posture monitoring.",
    "version": "0.1.5",
    "publisher": "Kineticode1",
    "license": "MIT",
    "qna": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/lcscaletty/psychic-octo-palm-tree"
    },
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other",
        "Machine Learning"
    ],
    "keywords": [
        "gesture",
        "posture",
        "camera",
        "mediapipe",
        "automation"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "air-gesture.selectMode",
                "title": "Kineticode: Open Control Menu"
            },
            {
                "command": "air-gesture.stop",
                "title": "Kineticode: Stop Detection"
            },
            {
                "command": "air-gesture.showLogs",
                "title": "Kineticode: Show Debug Logs"
            },
            {
                "command": "air-gesture.diagnostics",
                "title": "Kineticode: Run Diagnostics"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "kineticode-explorer",
                    "title": "Kineticode",
                    "icon": "icon.png"
                }
            ]
        },
        "views": {
            "kineticode-explorer": [
                {
                    "type": "webview",
                    "id": "kineticode.cameraView",
                    "name": "Camera Feed"
                }
            ]
        },
        "configuration": {
            "title": "Kineticode Control",
            "properties": {
                "airGesture.debugWindow": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show/hide the legacy OpenCV camera window (appears outside VS Code)."
                },
                "airGesture.enablePreview": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show/hide the in-editor camera preview in the Kineticode sidebar."
                },
                "airGesture.snapThreshold": {
                    "type": "number",
                    "default": 0.05,
                    "description": "Distance threshold for detecting a pinch (part of the clap gesture)."
                },
                "airGesture.pushTrigger": {
                    "type": "string",
                    "enum": [
                        "physical_push",
                        "clap",
                        "swipe_left",
                        "swipe_right"
                    ],
                    "default": "physical_push",
                    "description": "The gesture that triggers a Git Push when in Push Control mode."
                },
                "airGesture.pythonPath": {
                    "type": "string",
                    "default": "python",
                    "description": "Custom path to the Python executable. Default is 'python' or 'python3'."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "^16.11.7",
        "typescript": "^4.5.2"
    }
}
{
    "name": "kineticode",
    "displayName": "Kineticode: Air Gesture Control",
    "description": "Control VS Code with hand gestures and posture monitoring.",
    "version": "0.1.0",
    "publisher": "Kineticode1",
    "license": "MIT",
    "qna": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/lcscaletty/psychic-octo-palm-tree"
    },
    "icon": "icon.png",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other",
        "Machine Learning"
    ],
    "keywords": [
        "gesture",
        "posture",
        "camera",
        "mediapipe",
        "automation"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "air-gesture.selectMode",
                "title": "Air Gesture: Open Control Menu"
            },
            {
                "command": "air-gesture.startHand",
                "title": "Air Gesture: Hand Control Only"
            },
            {
                "command": "air-gesture.startPosture",
                "title": "Air Gesture: Posture Control Only"
            },
            {
                "command": "air-gesture.startDual",
                "title": "Air Gesture: Dual Control (Both)"
            },
            {
                "command": "air-gesture.startPush",
                "title": "Air Gesture: Git Push Control"
            },
            {
                "command": "air-gesture.stop",
                "title": "Air Gesture: Stop Detection"
            }
        ],
        "configuration": {
            "title": "Air Gesture Control",
            "properties": {
                "airGesture.debugWindow": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show/hide the camera preview and tracking visualizers."
                },
                "airGesture.snapThreshold": {
                    "type": "number",
                    "default": 0.05,
                    "description": "Distance threshold for detecting a pinch (part of the snap gesture)."
                },
                "airGesture.pushTrigger": {
                    "type": "string",
                    "enum": ["physical_push", "snap", "swipe_left", "swipe_right"],
                    "default": "physical_push",
                    "description": "The gesture that triggers a Git Push when in Push Control mode."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "^16.11.7",
        "typescript": "^4.5.2"
    }
}